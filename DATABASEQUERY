CREATE TABLE "TV_MENU_REPLY" (
	"TMR_NUM"	NUMBER		NULL,
	"TMB_NUM"	NUMBER		NOT NULL,
	"TMR_CONTENT"	CLOB		NULL,
	"TMR_WRITER"	VARCHAR2(30)		NULL,
