	"TMB_STATUS"	VARCHAR2(3)		NOT NULL
);

CREATE TABLE "TV_MENU_PRODUCT" (
	"TMB_NUM"	NUMBER		NOT NULL,
	"PR_CODE"	NUMBER		NULL,
	"PR_EACH"	NUMBER		NULL
);

